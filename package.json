{
  "name": "elephant-id-desktop",
  "version": "1.0.0",
  "description": "Airavat - Desktop App",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "publish": "electron-builder --publish always",
    "build:win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Powerranger45/siamese-elephant"
  },
  "build": {
    "appId": "com.elephantid.desktop",
    "productName": "Airavat V1",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "models/**/*",
      "utils/**/*",
      "node_modules/**/*",
      "!**/*.py",
      "!venv/**/*",
      "!__pycache__/**/*"
    ],
    "extraResources": [
      {
        "from": "python-backend/",
        "to": "python-backend/",
        "filter": [
          "**/*",
          "!**/*.pyc",
          "!__pycache__/**/*"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "sign": "echo 'Skipping Windows signing on Linux WSL'"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "child_process": "^1.0.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "extract-zip": "^2.0.1",
    "fs-extra": "^11.1.1",
    "multer": "^1.4.5-lts.1",
    "path": "^0.12.7"
  },
  "author": "Elephant ID Team",
  "license": "MIT",
  "homepage": "."
}
